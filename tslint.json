{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "no-any": false,
    "no-var-requires": false,
    "only-arrow-functions": false,
    "typedef": [true],
    "typedef-whitespace": [true],
    "curly": true,
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [true, "time", "timeEnd", "trace", "warn", "info", "debug"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": true,
    "use-isnan": true,

    "cyclomatic-complexity": [true, 30],
    "eofline": true,
    "indent": [true, "spaces"],
    "linebreak-style": [true, "LF"],
    "max-file-line-count": [true, 3000],
    "max-line-length": [true, 120],
    "no-default-export": false,
    "no-trailing-whitespace": true,

    "align": [true],
    "array-type": [true, "array-simple"],
    "arrow-parens": true,
    "class-name": true,
    "comment-format": [true, "check-space", "check-lowercase"],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "new-parens": true,
    "no-consecutive-blank-lines": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": [true, "jsx-single"],
    "one-line": [true],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "quotemark": [true, "single", "jsx-single"],
    "semicolon": [true, "never"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"],
    "whitespace": [true],

    "jsx-curly-spacing": [true, "always"],
    "jsx-equals-spacing": [true, "never"],
    "jsx-wrap-multiline": false,
    "jsx-alignment": false,
    "jsx-key": [true, "always"],

    "member-access": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-const": false,
    "trailing-comma": false,
    "max-classes-per-file": false,
    "prefer-for-of": false,
    "ban-types": [true,
      ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
      ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
      ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
      ["String", "Avoid using the `String` type. Did you mean `string`?"],
      ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
    ]
  }
}
