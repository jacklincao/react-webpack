{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "app/*": ["./app/*"],
      "components/*": ["./app/components/*"],
      "modules/*": ["./app/modules/*"],
      "store/*": ["./app/store/*"],
      "services": ["./app/services"],
      "svgs/*": ["./app/assets/svgs/*"],
      "utils": ["./app/util"],
      "types": ["./app/types"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
  },
  "include": [
    "src", "build/webpack.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}